{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "defaultProject": "frontend",
  "parallel": 5,
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "dev": {
      "dependsOn": [],
      "cache": false,
      "parallel": true
    },
    "start": {
      "dependsOn": [],
      "parallel": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "cache": true
    }
  },
  "tui": {
    "enabled": false
  },
  "plugins": [
    {
      "plugin": "@nx/js",
      "options": {
        "analyzeSourceFiles": true
      }
    }
  ],
  "release": {
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}@{version}",
    "groups": {
      "backend": {
        "projects": ["backend-main", "backend-cloud"]
      },
      "frontend": {
        "projects": ["frontend"]
      },
      "services": {
        "projects": ["service-asr"]
      }
    }
  }
}
